   <div class="android-content mdl-layout__content" align="center">

     <div class="mdl-layout mdl-js-layout mdl-color--grey-10">
     	<main class="mdl-layout__content">
     		<div class="mdl-card mdl-shadow--6dp" style="margin-top:25vh" align="center">
     			<div class="mdl-card__title mdl-color--gr mdl-color-text--white">
     				<h2 class="mdl-card__title-text">Enter</h2>
     			</div>
     	  	<div class="mdl-card__supporting-text">
     				<form action="/updateCollege" method="post">
     					<div class="mdl-textfield mdl-js-textfield">
     						<input class="mdl-textfield__input" type="text" id="username"  name="college" required/>
     						<label class="mdl-textfield__label" for="username">College</label>
     					</div>
     					<div class="mdl-textfield mdl-js-textfield">
     						<input class="mdl-textfield__input" type="Number" id="userpass"  name="phone" required/>
     						<label class="mdl-textfield__label" for="userpass">Phone Number</label>
     					</div>
              <div class="mdl-card__actions mdl-card--border">
         				<button  type="submit" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" style"background color:red;">Continue</button>
         			</div>
     				</form>
     			</div>
     		</div>
     	</main>
     </div>





       </div>
