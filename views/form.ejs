  <body style="background-color:#152020">
    <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">

      <div class="android-header mdl-layout__header mdl-layout__header--waterfall" style="background-color: #102020;">
        <div class="mdl-layout__header-row">
          <div class="android-title mdl-layout-title">
            <h4 style="font-family: 'Orbitron', sans-serif;"><b>CRYPTEX 2.0</b></h4>
          </div>
          <!-- Add spacer, to align navigation to the right in desktop -->


